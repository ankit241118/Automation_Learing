package Sdet_QA_Programs;

public class _13CountEvenOdd {
	public static void main(String[] args) {

		// Program to find number of even and odd digits in number

		int x = 123456;
		int evencount = 0;
		int oddcount = 0;

		while (x!=0) {
		int lastdigit=x%10;
		if(lastdigit%2==0) {
			evencount++;
		}
		else {oddcount++;}
		x=x/10;
		System.out.println("evencount :"+evencount+ "oddcount :"+oddcount);
		}
		
	}
}
